<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.kongmin.view.TextCategoryActivity$PlaceholderFragment"
                android:animateLayoutChanges="true">
    <ProgressBar
            android:id="@+id/pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:visibility="gone"
                  android:id="@+id/section_label"
                  android:layout_centerInParent="true"
                  android:orientation="vertical">
        <View  android:layout_height="1px"
               android:layout_width="match_parent"
               android:background="#d9d9d9" />
        <View  android:layout_height="1px"
               android:layout_width="match_parent"
               android:background="#d9d9d9" />
        <com.example.kongmin.util.FlowGroupView
                android:id="@+id/flowgroupview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
        </com.example.kongmin.util.FlowGroupView>
        <View  android:layout_height="1px"
               android:layout_width="match_parent"
               android:background="#d9d9d9" />
        <View  android:layout_height="1px"
               android:layout_width="match_parent"
               android:background="#d9d9d9" />
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFFAFA">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="0dp" >
               <!-- <TextView
                        android:id="@+id/section_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:text="text1"/>-->
                <View  android:layout_height="15px"
                       android:layout_width="match_parent"
                       android:background="#F5F5F5" />
                <TextView
                        android:id="@+id/doccontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textSize="18sp"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:text="@string/look_pictrue"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:layout_marginTop="5dp"
                      android:id="@+id/extractlinear"
                      android:orientation="horizontal">
            <TextView
                    android:id="@+id/completecon2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_message_button"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/tab_indicator"
                    android:visibility="invisible"/>
            <TextView
                    android:id="@+id/completecon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_message_button"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="left"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/submit_paragraph"
                    android:textColor="@color/tab_indicator" />
            <TextView
                    android:id="@+id/completedoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_message_button"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="结束该文档"
                    android:textColor="@color/tab_indicator"
                    />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
