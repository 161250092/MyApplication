<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.kongmin.view.rebuild.RegisterActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <!--用户名称-->
        <!--item的上分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--item内容部分的容器-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">
            <!--item中间部分的文字-->
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="用户昵称"
                    android:textSize="18sp" />
            <!--item 中间部分的输入框（有则显示无则隐藏）-->
            <EditText
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:hint="昵称，不能为空！"
                    android:textSize="18sp" />
        </LinearLayout>
        <!--item的下分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--用户邮箱-->
        <!--item的上分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--item内容部分的容器-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">
            <!--item中间部分的文字-->
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="用户邮箱"
                    android:textSize="18sp" />
            <!--item 中间部分的输入框（有则显示无则隐藏）-->
            <EditText
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:hint="邮箱，不能为空！"
                    android:textSize="18sp" />
        </LinearLayout>
        <!--item的下分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--用户密码-->
        <!--item的上分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--item内容部分的容器-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">
            <!--item中间部分的文字-->
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="用户密码"
                    android:textSize="18sp" />
            <!--item 中间部分的输入框（有则显示无则隐藏）-->
            <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:hint="密码，不能为空！"
                    android:textSize="18sp" />
        </LinearLayout>
        <!--item的下分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--确认密码-->
        <!--item的上分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--item内容部分的容器-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">
            <!--item中间部分的文字-->
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="确认密码"
                    android:textSize="18sp" />
            <!--item 中间部分的输入框（有则显示无则隐藏）-->
            <EditText
                    android:id="@+id/passwordconfirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:hint="确认密码，不能为空！"
                    android:textSize="18sp" />
        </LinearLayout>
        <!--item的下分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--item内容部分的容器-->
        <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@android:color/white"-->
                <!--android:gravity="center_vertical"-->
                <!--android:orientation="horizontal"-->
                <!--android:paddingBottom="20dp"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:paddingTop="20dp">-->
        <!--</LinearLayout>-->
        <!--item的下分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--用户生日-->
        <!--item的上分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--item内容部分的容器-->

        <!--item的下分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--用户职业-->
        <!--item的上分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <!--item内容部分的容器-->

        <!--item的下分割线-->
        <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#efefef" />
        <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_userPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/round_corner_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="提交"
                android:textColor="#fff"
                android:textSize="18sp" />
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>

