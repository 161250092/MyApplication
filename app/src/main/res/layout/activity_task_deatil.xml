<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.kongmin.view.taskDetails.TaskDetailActivity"
        >

    <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:scrollbars="none"
        >


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/layout"
                      android:background="@color/white"
                      android:layout_margin="0dp">

            <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" > 
                <TextView
                        android:id="@+id/dotask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/dotask_icon"
                        android:gravity="center"
                        android:padding="5dip"

                        android:textColor="@color/tab_indicator"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">
                <!--item中间部分的文字-->
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/textView1"
                    android:text="任务标题"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tasktitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />
            </LinearLayout>
            <View  android:layout_height="3px"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">
                <!--item中间部分的文字-->
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/typename"
                    android:text="任务类型"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />
            </LinearLayout>
            <View  android:layout_height="3px"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:text="标注文件"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:id="@+id/show_file_list"
                    android:onClick="showTaskList"
                    android:text="展示文件"
                    android:textColor="@color/tab_indicator"
                     />

                </LinearLayout>
            <View  android:layout_height="3px"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">
                <!--item中间部分的文字-->
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/deadlinename"
                    android:text="截至日期"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />
            </LinearLayout>
            <View  android:layout_height="3px"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">
                <!--item中间部分的文字-->
                <TextView
                    android:id="@+id/begintime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="发布日期"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/createtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />
            </LinearLayout>
            <View  android:layout_height="3px"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp">
                <!--item中间部分的文字-->
                <TextView
                    android:id="@+id/publishuser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="发布者"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/puser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="18sp" />
            </LinearLayout>
            <View  android:layout_height="3px"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary" />

            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/instlv"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/instancelabeltv"
                            android:textSize="15sp"

                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="相关标签：" />

                    <com.example.kongmin.util.FlowGroupView
                            android:id="@+id/instancelabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp">
                    </com.example.kongmin.util.FlowGroupView>

                </LinearLayout>

            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/item1lv"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/item1labeltv"
                            android:textSize="15sp"

                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="item1标签：" />
                    <com.example.kongmin.util.FlowGroupView
                            android:id="@+id/item1label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                    </com.example.kongmin.util.FlowGroupView>
                </LinearLayout>

            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/item2lv"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/item2labeltv"
                            android:textSize="15sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="item2标签：" />
                    <com.example.kongmin.util.FlowGroupView
                            android:id="@+id/item2label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="2dp">
                    </com.example.kongmin.util.FlowGroupView>
                </LinearLayout>


            <View  android:layout_height="15px"
                       android:layout_width="match_parent"
                       android:background="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content"
                android:text="内容简介"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/show_file_list">
                <TextView
                    android:id="@+id/taskcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:hint="任务内容"
                    android:background="@null"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp" />

            </LinearLayout>




            </LinearLayout>


    </ScrollView>


</RelativeLayout>