<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.kongmin.view.textcategory.TextCategoryTabActivity">

    <com.example.kongmin.view.textcategory.DropDownMenu
            android:id="@+id/dropDownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ddmenuTextSize="13sp"
            app:ddtextUnselectedColor="@color/drop_down_unselected"
            app:ddtextSelectedColor="@color/drop_down_selected"
            app:dddividerColor="@color/gray"
            app:ddunderlineColor="@color/gray"
            app:ddmenuMenuHeightPercent="0.5"
            app:ddmenuSelectedIcon="@mipmap/drop_down_selected_icon"
            app:ddmaskColor="@color/mask_color"
            app:ddmenuBackgroundColor="@color/white"
            app:ddmenuUnselectedIcon="@mipmap/drop_down_unselected_icon"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.example.kongmin.view.textcategory.MyTabIndicator
        android:id="@+id/mTabIndicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:textNormalColor="#777777"
        app:textSelectedColor="#1a1517"
        app:textNormalSize="4dp"
        app:textSelectedSize="5dp"
        app:indicatorColor="#ff6633"
        app:indicatorWidth="15dp"
        app:backGroundColor="#fff"/>

        <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" />


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mViewPager"
            android:layout_marginTop="5dp"
            android:id="@+id/extractlinear"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/completecon2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_message_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/tab_indicator"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/downloadextract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_message_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="left"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="下载该文档"
            android:textColor="@color/tab_indicator" />
    </LinearLayout>

</LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_tool"
        />


</RelativeLayout>





