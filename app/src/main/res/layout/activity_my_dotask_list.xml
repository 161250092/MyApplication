<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/main_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".textcategory.CategoryTabActivity">
        <com.example.textannotation.view.commonVIew.MyTabIndicator
                android:id="@+id/mTabIndicator"
                android:layout_width="match_parent"
                android:layout_height="44dp"
            app:textNormalColor="#777777"
            app:textSelectedColor="#060606"
                app:textNormalSize="15px"
                app:textSelectedSize="15px"
                app:indicatorColor="#ff6633"
                app:indicatorWidth="13dp"
                app:backGroundColor="#fff"/>
        <android.support.v4.view.ViewPager
                android:id="@+id/mViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="44dp"/>
    </RelativeLayout>
</LinearLayout>