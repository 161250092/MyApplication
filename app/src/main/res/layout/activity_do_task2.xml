<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_above="@+id/tools">

        <com.example.kongmin.view.textcategory.MyTabIndicator
            android:id="@+id/mTabIndicator"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:textNormalColor="#777777"
            app:textSelectedColor="#060606"
            app:textNormalSize="4dp"
            app:textSelectedSize="5dp"
            app:indicatorColor="#ff6633"
            app:indicatorWidth="13dp"
            app:backGroundColor="#fff"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/extractlinear"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/completecon2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_message_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/tab_indicator"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/downloadextract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_message_button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="left"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="下载该文档"
                android:textColor="@color/tab_indicator" />
        </LinearLayout>

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_tool"
        />

</RelativeLayout>
