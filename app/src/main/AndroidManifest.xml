<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.textannotation.myapplication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission
            android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
            tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
            android:name="com.example.textannotation.util.MyApplication"
            android:allowBackup="true"
            android:icon="@drawable/app_logo"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.example.textannotation.view.mainPage.MainActivity"
                android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
                android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.example.textannotation.view.login.LoginActivity">

        </activity>

        <activity android:name="com.example.textannotation.view.taskDetails.TaskDetailActivity"
            android:launchMode="singleTop">
        </activity>

        <activity android:name="com.example.textannotation.view.doTask.categoryMatch.MatchCategoryActivity">
        </activity>
        <activity android:name="com.example.textannotation.view.doTask.categoryRelation.TextCategoryTabActivity">
        </activity>
        <activity android:name="com.example.textannotation.view.doTask.oneCategory.OneCategoryActivity">
        </activity>
        <activity android:name="com.example.textannotation.view.incompletePart.ItemListActivity">
        </activity>

        <activity
                android:name="com.example.textannotation.view.incompletePart.ItemDetailActivity"
                android:label="@string/title_item_detail"
                android:parentActivityName="com.example.textannotation.view.incompletePart.ItemListActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.textannotation.view.incompletePart.ItemListActivity"/>

        </activity>

        <activity android:name="com.example.textannotation.view.doTask.extractText.DoTaskExtractActivity">
        </activity>
        <activity android:name="com.example.textannotation.view.lazyfragment.TabActivity">
        </activity>

        <activity android:name="com.example.textannotation.view.doTask.sort.DtOneSortActivity">
        </activity>
        <activity android:name="com.example.textannotation.view.register.RegisterActivity">
        </activity>

        <activity android:name="com.example.textannotation.view.incompletePart.SelectActivity">
        </activity>
        <activity android:name="com.example.textannotation.view.myTasks.MyTaskListActivity">
        </activity>
        <activity android:name="com.example.textannotation.view.taskDetails.FileContentActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name="com.example.textannotation.view.taskList.TaskListActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name="com.example.textannotation.view.launcher.LaunchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.textannotation.view.taskList.ViewAllTaskActivity"
            android:launchMode="singleTask"/>
        <activity android:name="com.example.textannotation.view.taskList.SpecifiedTaskListActivity" />

    </application>

</manifest>